@using ProyectoFotoCore.Models
@model List<SESSION_COMPLEX>

@{
    ViewBag.Title = "Sesion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles {
    <style>
        .noPadding {
            padding: 0px !important;
        }
        .img {
            width: 240px;
            height: 240px;
        }
    </style>
}
@section events{
    <script>
        $(document).ready(function () {
            M.AutoInit();
        });
    </script>

}

<div class="row">
    <div class="col s12 m10 l10 xl10 offset-m1 offset-l1 offset-xl1">
        <div class="card">
            <div class="card-content">
                @if (Model != null)
                {
                    <div class="row">
                        @foreach (SESSION_COMPLEX s in Model)
                        {
                            <div class="col s12 m8 l6 xl4">
                                <div class="card">
                                    <div class="card-image activator">
                                        @if (s.IdPhoto == 0)
                                        {
                                            <img class="activator img" src="~/images/default/default.jpg">
                                            <div class="card-title activator" style="color:black">@s.Name</div>
                                        }
                                        else
                                        {
                                            <img class="activator img" src="~/images/session/@s.Name/@s.Picture" style="object-fit:cover;">
                                            <div class="card-title activator" >@s.Name</div>
                                        }

                                    </div>
                                    <div class="card-content">
                                        
                                        <div class="card-action">
                                            <a href="@Url.Action("DeleteSesion","Session",new { id = s.Id, name = s.Name  })" style="float: right"><i class="material-icons" style="color:red">delete</i></a>
                                            <a href="@Url.Action("EditSesion","Session",new { id = s.Id })" style="float: right"><i class="material-icons" style="color: black;">edit</i></a>
                                            <a href="@Url.Action("ManagePhotos","Session",new { idSesion = s.Id })" style="float: right"><i class="material-icons" style="color: black;">photo_library</i></a>
                                        </div>
                                    </div>
                                    <div class="card-reveal">
                                        <span class="card-title noPadding"><i class="material-icons right">close</i></span>
                                        <p>@s.Description</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>

        </div>
    </div>
</div>

<div class="fixed-action-btn" style="margin-bottom:5em">
    <a href="@Url.Action("CreateSesion","Session")" class="btn-floating btn-large green">
        <i class="large material-icons">add_circle</i>
    </a>
</div>

<div class="fixed-action-btn" style="margin-bottom:10em">
    <a href="@Url.Action("FavoritePhotos","Session")" class="btn-floating btn-large red">
        <i class="large material-icons">favorite</i>
    </a>
</div>

