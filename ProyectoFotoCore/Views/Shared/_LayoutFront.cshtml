<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <environment include="Development">

        <link href="~/css/materialize.min.css" rel="stylesheet" />
        <link href="~/css/custom.css" rel="stylesheet" />

    </environment>

    @RenderSection("styles", false)
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

</head>
<body>
    <main class="grey lighten-4">
        <nav class="white" style="color:black;">
            <div class="nav-wrapper">
                @Html.ActionLink("Proyecto Foto", "menu", "admin", new { }, new { @class = "brand-logo", @style = "color:black" })
                <ul id="nav-mobile" class="right hide-on-med-and-down">
                    <li><a a class="dropdown-trigger" href="#!"  style="color: black">Sesiones</a></li>
                    <li><a class="dropdown-trigger" href="#!" style="color: black">Comisiones</a></li>
                </ul>
            </div>
        </nav>
        <div class="row"></div>
        @RenderBody()
    </main>

    <footer class="page-footer grey darken-2">
        <div class="container">
        </div>
        <div class="footer-copyright">
            <div class="container">
                Proyecto de Clase
                <a class="grey-text text-lighten-4 right" href="#!">Sitio Web</a>
            </div>
        </div>
    </footer>

    <environment include="Development">
        <script src="~/js/jquery-3.3.1.min.js"></script>
        <script src="~/js/materialize.min.js"></script>
    </environment>

    @if (IsSectionDefined("events"))
    {
        @RenderSection("events")
    }



</body>
</html>
